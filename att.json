{
    "commands": {
        "htmlminifier": {
            "removeComments": true,
            "removeCommentsFromCDATA": true,
            "removeCDATASectionsFromCDATA": true,
            "collapseWhitespace": true,
            "collapseBooleanAttributes": true,
            "removeAttributeQuotes": false,
            "removeRedundantAttributes": true,
            "useShortDoctype": true,
            "removeEmptyAttributes": true,
            "removeEmptyElements": false,
            "removeOptionalTags": false,
            "removeScriptTypeAttributes": true,
            "removeStyleLinkTypeAttributes": true
        },
        "less": {
            "compress": true
        },
        "datauri": {
            "fixIE": true,
            "maxSize": 32700
        }
    },
    "external-commands": [],
    "plugins": {
        "minify": {
            "datauri": true,
            "toAbsolutePath": true,
            "mapper": "./mappers/VersionMapper"
        },
		"cdn": {
			"endpoint": "http://m-source.aliyun.com/att_server/upload.php",
			"cdnRoot": "http://m.alicdn.com",
			"defaultEnableDataURI": false,
			"ignoreDataURIPrompt": true,
			"checkJS": false,
			"checkCSS": false,
			"mapper": "./mappers/VersionMapper",
			"currentWorkspace": "workspace",
			"workspaces": {
				"workspace": "D:\\Develop\\workspace"
			},
			"validTopDirectories": ["product", "cloudapp", "promotion", "docs"]
		}
    },
    "external-plugins": [
    ]
}